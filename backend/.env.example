# 基础配置
SECRET_KEY=your-secret-key-here
DEBUG=false

# 数据库配置
DATABASE_URL=sqlite:///./kb_upload_genie.db

# Cloudflare Turnstile配置
# 从 https://dash.cloudflare.com/?to=/:account/turnstile 获取这些值
TURNSTILE_ENABLED=true
TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# 文件上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_TYPES=.md,.txt,.docx,.pdf,.pptx,.js,.ts,.py,.java,.cpp,.html,.css,.jpg,.png,.gif,.svg,.webp

# 服务器配置
HOST=0.0.0.0
PORT=8000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,http://localhost:3000

# AI服务配置 (可选)
# OPENAI_API_KEY=your-openai-api-key
# GLM_API_KEY=your-glm-api-key
# GEMINI_API_KEY=your-gemini-api-key
# MOONSHOT_API_KEY=your-moonshot-api-key
# STEPFUN_API_KEY=your-stepfun-api-key

# GitHub配置 (可选)
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# 邮件配置 (可选)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-email-password
# SMTP_TLS=true

# 日志配置
LOG_LEVEL=INFO
# LOG_FILE=app.log
